<% book.book_comments.each do |book_comment| %>
<table class="table table-striped">
    <tr>
        <td><%= book_comment.user.name %></td>
        <td><%= book_comment.created_at.strftime('%Y/%m/%d') %></td>
        <td><%= book_comment.comment %></td>
        <td><% if @user == current_user %>
            <%= link_to "Destroy", book_comment_path(book_comment), class:"btn-sm btn-danger", method: :delete, "data-confirm" => "本当に削除しますか？" %>
            <% end %>
        </td>
    </tr>
</table>
<% end %>

